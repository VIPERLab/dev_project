<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="65dp"
        android:layout_height="64dp" >

        <Button
            android:id="@+id/set_bg_img_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/set_bg_img_btn" />

        <ImageView
            android:id="@+id/set_bg_img"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:layout_alignBottom="@id/set_bg_img_btn"
            android:layout_alignLeft="@id/set_bg_img_btn"
            android:layout_alignRight="@id/set_bg_img_btn"
            android:layout_alignTop="@id/set_bg_img_btn"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/set_bg_img_transp"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:layout_alignBottom="@id/set_bg_img"
            android:layout_alignLeft="@id/set_bg_img"
            android:layout_alignRight="@id/set_bg_img"
            android:layout_alignTop="@id/set_bg_img"
            android:background="@drawable/set_bg_img_transp"
            android:visibility="gone" />

        <Button
            android:id="@+id/set_bg_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/set_bg_delete_btn" />
    </RelativeLayout>

</RelativeLayout>