<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="@android:color/transparent">
    
    <ImageView 
        android:id="@+id/iv_live_room"
        android:layout_width="75dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        />
    
    <TextView 
        android:id="@+id/tv_live_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_live_room"
        android:layout_marginTop="4dip"
        android:text="直播房间名称"
        android:textColor="@android:color/black" 
        />

    <TextView
        android:id="@+id/tv_live_room_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_live_room"
        android:layout_below="@+id/tv_live_room_name"
        android:layout_marginTop="4dip"
        android:text="房间描述"
        android:textColor="@android:color/darker_gray"/>
    
     <TextView
        android:id="@+id/tv_live_room_userCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_live_room"
        android:layout_below="@+id/tv_live_room_desc"
        android:layout_marginTop="4dip"
        android:text="在线： 1757人" 
        android:textColor="@android:color/darker_gray"/>

</RelativeLayout>