<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/shared_use_sina_title_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_rellayout_bg" >

        <!-- title -->

        <TextView
            android:id="@+id/shared_use_sina_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shared_use_sina_title"
            android:textColor="#ffffff"
            android:textSize="21dp" />

        <!-- back -->

        <Button
            android:id="@+id/shared_use_sina_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_btn_bg_selector"
            android:text="@string/app_back_btn"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <!-- modify input -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shared_use_sina_title_rl"
        android:background="#ededed" >

        <RelativeLayout
            android:id="@+id/shared_use_sina_input_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_bg"
            android:padding="1px" >

            <TextView
                android:id="@+id/shared_use_sina_account"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/shared_use_sina_account"
                android:textColor="#000000"
                android:textSize="19dp" />
            <!-- account -->

            <EditText
                android:id="@+id/shared_use_sina_account_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/shared_use_sina_account"
                android:layout_alignTop="@id/shared_use_sina_account"
                android:layout_toRightOf="@id/shared_use_sina_account"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:textSize="15dp" />

            <!-- 分割线 -->

            <ImageView
                android:id="@+id/shared_use_sina_every_line1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/shared_use_sina_account"
                android:background="@drawable/input_every_bg_repeat" />

            <TextView
                android:id="@+id/shared_use_sina_psw"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/shared_use_sina_every_line1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/shared_use_sina_psw"
                android:textColor="#000000"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/shared_use_sina_psw_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/shared_use_sina_psw"
                android:layout_alignTop="@id/shared_use_sina_psw"
                android:layout_toRightOf="@id/shared_use_sina_psw"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:textSize="15dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/setting_clear_cache_btn"
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:layout_below="@id/shared_use_sina_input_rl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/button_bg_selector"
            android:padding="0dp"
            android:text="@string/shared_use_sina_ok"
            android:textColor="#000000"
            android:textSize="22dp" />
    </RelativeLayout>

</RelativeLayout>