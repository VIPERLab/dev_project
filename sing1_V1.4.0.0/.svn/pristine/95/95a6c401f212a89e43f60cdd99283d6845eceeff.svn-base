<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/local_my_item_rl"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/local_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="0dp"
                android:text="那些年"
                android:textColor="#ffffff"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/local_my_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/local_my_name"
                android:layout_below="@id/local_my_name"
                android:layout_marginTop="7dp"
                android:padding="0dp"
                android:text="2012-9-20"
                android:textColor="#ffffff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/local_my_listened"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/local_my_date"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/local_my_date"
                android:drawableLeft="@drawable/local_my_listened"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="26310"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/local_my_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/local_my_listened"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/local_my_listened"
                android:drawableLeft="@drawable/local_my_msg"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="689"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/local_my_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/local_my_msg"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/local_my_msg"
                android:drawableLeft="@drawable/local_my_flower"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="1230"
                android:textColor="#ffffff"
                android:textSize="10dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/local_my_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/red_btn_selector"
            android:text="@string/local_my_delete"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/local_my_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/orange_btn_selector"
            android:text="@string/local_my_share"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/local_my_post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/trans_btn_selector"
            android:text="@string/local_my_post"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>