<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <RelativeLayout 
            android:id="@+id/rlItem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true">
            
            <ImageView 
		    android:id="@+id/ivListImageItem1"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:padding="2dp"
		    android:scaleType="fitXY"
		    android:background="@drawable/iv_bg_selector"/>
	
			<TextView 
		    android:id="@+id/tvListImageItem1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="3dp"
		    android:layout_below="@id/ivListImageItem1"
		    android:singleLine="true"
		    android:textSize="14sp"
		    android:textColor="@android:color/black"
		    android:text="我是歌手"
		    android:typeface="normal"/>
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/rlItem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true">
            
            <ImageView 
		    android:id="@+id/ivListImageItem2"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:padding="2dp"
		    android:scaleType="fitXY"
		    android:background="@drawable/iv_bg_selector"/>
	
			<TextView 
		    android:id="@+id/tvListImageItem2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="3dp"
		    android:layout_below="@id/ivListImageItem2"
		    android:singleLine="true"
		    android:textSize="14sp"
		    android:textColor="@android:color/black"
		    android:text="我是歌手"
		    android:typeface="normal"/>
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/rlItem3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:clickable="true">
            
            <ImageView 
		    android:id="@+id/ivListImageItem3"
		    android:layout_width="120dp"
		    android:layout_height="120dp"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:padding="2dp"
		    android:scaleType="fitXY"
		    android:background="@drawable/iv_bg_selector"/>
	
			<TextView 
		    android:id="@+id/tvListImageItem3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="3dp"
		    android:layout_below="@id/ivListImageItem3"
		    android:singleLine="true"
		    android:textSize="14sp"
		    android:textColor="@android:color/black"
		    android:text="我是歌手"
		    android:typeface="normal"/>
        </RelativeLayout>
		
    </LinearLayout>
        
</RelativeLayout>