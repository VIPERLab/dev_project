<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/tabbar_bg" >

        <LinearLayout
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="buttonOnClick"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_commment_close_button_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="关闭"
                android:textColor="#868686" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="3dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/weibo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="转发到$TYPE"
                android:textColor="#404040"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/bind_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="转发到$TYPE"
                android:textColor="#404040"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="buttonOnClick"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_submit_comment_button_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:text="发布"
                android:textColor="#868686" />
        </LinearLayout>
    </RelativeLayout>

    <com.ifeng.share.util.LineEditText
        android:id="@+id/share_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="13dip"
        android:layout_marginTop="13dip"
        android:background="@null"
        android:gravity="top"
        android:hint="有什么想法想告诉大家？"
        android:maxLength="140"
        android:minLines="5"
        android:paddingLeft="3dip" />

    <RelativeLayout
        android:id="@+id/write_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dip"
        android:layout_marginTop="1dip" >

        <TextView
            android:id="@+id/right_zi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="字"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/avaliable_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_zi"
            android:text=""
            android:textColor="#404040"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/avaliable_size"
            android:text="还可输入"
            android:textSize="12sp" />
    </RelativeLayout>

    <Gallery
        android:id="@+id/share_garllery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="13dip"
        android:layout_marginTop="13dip" />

</LinearLayout>