    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tenqt_textIntro" 
    />
    
    <Button
		android:id="@+id/btnOAuthV1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/tenqt_btnOAuthV1"
	/>

    
    <Button
		android:id="@+id/btnOAuthV2ImplicitGrant"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/tenqt_btnOAuthV2ImplicitGrant"
	/>

</LinearLayout>