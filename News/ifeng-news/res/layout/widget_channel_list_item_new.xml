<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:news="http://api.3g.ifeng.com/textview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/channellist_selector"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/fill_both_size"
        android:orientation="horizontal"
        android:paddingBottom="11dip"
        android:paddingLeft="16dip"
        android:paddingTop="11dip" >

        <RelativeLayout
            android:id="@+id/thumbnail_wrapper"
            style="@style/auto_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="13dip"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/bg_thumbnail"
                style="@style/auto_size"
                android:src="@drawable/default_channel_index" />

            <com.qad.view.RecyclingImageView
                android:id="@+id/thumbnail"
                style="@style/auto_size"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/list_right_icon"
            style="@style/auto_size"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dip"
            android:background="@drawable/channel_list_topic_icon"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/list_center_module"
            style="@style/channel_list_title_module"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/list_right_icon"
            android:layout_toRightOf="@id/thumbnail_wrapper" >

            <com.ifeng.news2.util.AutoResizeTextView
                android:id="@+id/title"
                style="@style/channel_list_title"
                android:gravity="top"
                android:paddingRight="5dip"
                android:text="列表标题" />

            <include
                android:id="@+id/channel_list_slide_module"
                style="@style/fillh_auto_size"
                android:layout_below="@id/title"
                layout="@layout/channel_list_slides_style"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@id/channel_list_slide_module" >

                <!--
                     <com.ifeng.news2.widget.IfengTextView
                    android:id="@+id/introduction"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="列表简介"
                    news:lineSpacingExtra="5"
                    news:maxLines="2"
                    news:textColor="#ffA6A6A6"
                    news:textSize="14" />
                -->

                <TextView
                    android:id="@+id/editTime"
                    style="@style/channel_list_description"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="2008/08/12"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/list_left_icon"
                    style="@style/auto_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/channel_list_video_icon"
                    android:visibility="invisible" />

                <include
                    android:id="@+id/collection_button"
                    style="@style/auto_size"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    layout="@layout/widget_channel_list_item_collection_button"
                    android:paddingRight="4dip"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/list_comment_module"
                    style="@style/auto_size"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="4dip" >

                    <ImageView
                        android:id="@+id/channel_list_comment_icon"
                        style="@style/auto_size"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/channel_list_comment_icon" />

                    <TextView
                        android:paddingLeft="5dip"
                        android:id="@+id/comments"
                        style="@style/channel_list_description"
                        android:gravity="bottom" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.ifeng.news2.widget.DividerLine
        android:id="@+id/channelDivider"
        style="@style/fillh_auto_size"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="18dip"
        isHistoryDivider="false" />

</LinearLayout>