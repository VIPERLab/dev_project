<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/ip_floor_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:textColor="#2b5470"
            android:textSize="14sp" 
            android:text="北京市网友" />
        
        <TextView
            android:id="@+id/floor_uuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ip_floor_from"
            android:layout_marginLeft="3dp"
            android:textColor="#2b5470"       
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/comment_floor_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:textColor="@color/list_readed_text_color"
            android:text="2"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/comment_floor_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/comment_floor_item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_divider"/>
</LinearLayout>