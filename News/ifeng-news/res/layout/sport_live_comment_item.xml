<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fillh_auto_size"
    android:orientation="vertical" >

    <LinearLayout style="@style/fillh_auto_size" >

        <com.ifeng.news2.sport_live.widget.SportLiveCommentItemTitle
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/name"
                style="@style/sport_live_comment_title"
                android:textColor="@color/sport_live_blue" />

            <TextView
                android:id="@+id/to"
                style="@style/sport_live_comment_title"
                android:text="对"
                android:textColor="@color/loading_fail_font" />

            <TextView
                android:id="@+id/to_name"
                style="@style/sport_live_comment_title"
                android:textColor="@color/sport_live_blue" />

            <TextView
                android:id="@+id/say"
                style="@style/sport_live_comment_title"
                android:text="说"
                android:textColor="@color/loading_fail_font" />
        </com.ifeng.news2.sport_live.widget.SportLiveCommentItemTitle>

        <TextView
            android:id="@+id/time"
            style="@style/sport_live_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/loading_fail_font"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        style="@style/sport_live_title"
        android:layout_marginTop="8dp"
        android:textColor="@color/sport_title_color" />

</LinearLayout>