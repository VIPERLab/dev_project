<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/appwidget_body_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/widget_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/appwidget_top_bg"
             >

            <ImageView
                android:id="@+id/widget_apptag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/appwidget_tag_4x1" />

            <ImageView
                android:id="@+id/widget_refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/appwidget_refresh_btn_4x1_selector" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/widget_refresh_btn"
                android:src="@drawable/appwidget_divider_4x1" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/widget_body_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/widget_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/pre_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/appwidget_pre_btn_4x1_selector" />

                    <ImageView
                        android:id="@+id/next_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/appwidget_next_btn_4x1_selector" />

                    <RelativeLayout
                        android:id="@+id/body_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/next_btn"
                        android:layout_toRightOf="@id/pre_btn"
                        android:paddingTop="@dimen/widget_title_margin_top"
                        android:paddingBottom="3.0dip"
                        >

                        <TextView
                            android:id="@+id/widget_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentTop="true"
	                        android:lines="2"
                            android:textColor="@color/appwidget_title_text_color"
                            android:textSize="@dimen/widget_title_size"
                            android:textStyle="normal"
                            android:typeface="sans" />

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <include
                android:id="@id/widget_loadding"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="invisible"
                layout="@layout/appwidget_loadding" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/widget_bottom"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip" />
    </LinearLayout>

</LinearLayout>