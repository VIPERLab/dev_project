<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fillh_auto_size"
    android:background="@drawable/detail_comment_bg"
    android:focusable="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <RelativeLayout
        android:id="@+id/detail_comment_title"
        style="@style/fillh_auto_size"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/detail_close_commment_button"
            style="@style/auto_size"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="buttonOnClick"
            android:orientation="horizontal" >

            <ImageView
                style="@style/auto_size"
                android:src="@drawable/detail_commment_close_button_icon" />

            <TextView
                style="@style/auto_size"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="关闭"
                android:textColor="@color/list_readed_text_color" />
        </LinearLayout>
        <TextView
            android:id="@+id/centerMessage"
            style="@style/auto_size"
            android:layout_centerHorizontal="true"
            android:text="跟帖"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/detail_submit_comment_button"
            style="@style/auto_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="buttonOnClick"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                style="@style/auto_size"
                android:src="@drawable/detail_submit_comment_button_icon" />

            <TextView
                style="@style/auto_size"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:text="发布"
                android:textColor="@color/list_readed_text_color" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_comment_editText_wrapper"
        style="@style/fillh_auto_size"
        android:layout_below="@id/detail_comment_title"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/detail_comment_editText"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="在这里留言"
            android:textColorHint="#cccccc"
            android:textSize="16sp" >
        </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/policy_text_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/detail_comment_editText_wrapper"
        android:orientation="horizontal"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="2dip" >

        <TextView
            android:id="@+id/policy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:text="文明上网，遵守“七条底线”"
            android:textColor="#686868"
            android:textSize="10sp" >
        </TextView>
    </LinearLayout>

</RelativeLayout>