<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/white"
	    android:orientation="vertical" >
	
	    <com.ifeng.news2.widget.ChannelMenu
	        android:id="@+id/channel_menu"
	        style="@style/fillh_auto_size"
	        android:layout_alignParentTop="true"
	        android:background="@drawable/historymessage_titlebar" />
	
	    <com.ifeng.news2.widget.NewsMasterViewPager
	        android:id="@+id/viewpager"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/channel_menu"
	        android:layout_gravity="center" >
	    </com.ifeng.news2.widget.NewsMasterViewPager>
	
	</RelativeLayout>
	
    <FrameLayout 
        android:id="@+id/tips_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/tips_background"
	    android:visibility="gone" >
	
        <ImageView 
            android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/tips_list"
		    android:layout_gravity="center"
		    android:scaleType="center"/>
    </FrameLayout>
    
</FrameLayout>