<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/appwidget_body_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/widget_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/appwidget_top_bg" >

            <ImageView
                android:id="@+id/widget_apptag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/widget_logo_margin_left"
                android:src="@drawable/appwidget_tag" />

            <ImageView
                android:id="@+id/widget_refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/appwidget_refresh_btn_selector" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/widget_refresh_btn"
                android:src="@drawable/appwidget_divider" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5.0dip" >

            <LinearLayout
                android:id="@+id/widget_body_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/widget_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="1.0dip"
                    android:paddingBottom="1.0dip"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip" >

                    <ImageView
                        android:id="@+id/widget_img"
                        android:layout_width="@dimen/widget_head_width"
                        android:layout_height="@dimen/widget_head_height"
                        android:layout_centerVertical="true"
                        android:src="@drawable/appwidget_default_head" />

                    <TextView
                        android:id="@+id/widget_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.0dip"
                        android:layout_toRightOf="@id/widget_img"
                        android:lines="2"
                        android:textColor="@color/appwidget_title_text_color"
                        android:textSize="@dimen/widget_title_size"
                        android:textStyle="normal"
                        android:typeface="sans" />

                    
                    <TextView
                        android:id="@+id/widget_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/widget_title"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/widget_date_margin_top"
                        android:paddingRight="5.0dip"
                        android:textColor="@color/appwidget_date_text_color"
                        android:textSize="@dimen/widget_date_size"
                        android:textStyle="normal"
                        android:text="2013/12/12 14:30:58"
                        android:typeface="sans" />
                </RelativeLayout>
            </LinearLayout>

            <include
                android:id="@+id/widget_loadding"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="invisible"
                layout="@layout/appwidget_loadding"
                 />
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/appwidget_divider_bottom" />

        <RelativeLayout
            android:id="@+id/widget_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/pre_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/appwidget_pre_btn_selector" />

            <ImageView
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/appwidget_next_btn_selector" />

            <TextView
                android:id="@+id/news_num_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/appwidget_date_text_color"
                android:textSize="18sp"
                android:typeface="sans" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>