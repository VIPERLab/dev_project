<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/channellist_selector"
    style="@style/fill_both_size" >

    <com.ifeng.news2.widget.IfengBottomTitleTabbar
        android:id="@+id/detail_tabbar"
        android:layout_alignParentBottom="true"
        style="@style/fillh_auto_size"
        mode="mode_vote_day"/>
    
    <com.ifeng.news2.widget.ListViewWithFlingDetector
        android:id="@+id/video_detail_listview"
        android:layout_above="@id/detail_tabbar"
        style="@style/fill_both_size" />
        
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/detail_tabbar"
        android:background="@drawable/detail_tabbar_shadow" />

</RelativeLayout>