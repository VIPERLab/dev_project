<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/fill_both_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="10dp" >

        <RelativeLayout style="@style/auto_size" >

            <!-- 进度条 -->

            <com.ifeng.news2.vote.VoteProgress
                android:id="@+id/bar"
                style="@style/auto_size"
                android:layout_centerVertical="true" />

            <!-- 百分比 -->

            <TextView
                android:id="@+id/vote_percent"
                style="@style/auto_size"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bar"
                android:text="22.2"
                android:textColor="#222222"
                android:textSize="20sp" />

            <!-- 票数 -->

            <TextView
                android:id="@+id/vote_num"
                style="@style/auto_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2234票"
                android:textColor="#222222"
                android:textSize="12sp" />
            
             <ImageView
                android:id="@+id/img_slice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/vote_num"
                android:src="@drawable/slice"
                android:visibility="gone"
                 />
        </RelativeLayout>

        <!-- 内容 -->

        <TextView
            android:id="@+id/vote_result_text"
            style="@style/auto_size"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="为了国家的安全和利益，无可厚非为了国家的安全和利益"
            android:textColor="#727272"
            android:textSize="14sp" />
    </LinearLayout>

    <View     
        style="@style/vote_divider"
        android:layout_alignParentBottom="true" />

</RelativeLayout>