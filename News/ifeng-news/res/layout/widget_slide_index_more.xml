<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_both_size" >

    <FrameLayout
        style="@style/auto_size"
        android:layout_alignParentTop="true"
        android:visibility="invisible" >

        <include layout="@layout/widget_slide_index_item" />
    </FrameLayout>

    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="129dp"
        android:layout_height="117dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:background="@color/light_gray" >

        <ImageView
            android:id="@+id/more_img"
            style="@style/slide_more_img"
            android:layout_centerInParent="true" />

        <TextView
            style="@style/slide_more_text"
            android:layout_below="@id/more_img" />
    </RelativeLayout>

</FrameLayout>