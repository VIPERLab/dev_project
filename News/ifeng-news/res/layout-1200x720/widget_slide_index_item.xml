<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_both_size"
    android:background="@drawable/channellist_selector"
    android:padding="10dp" >

    <com.qad.view.RecyclingImageView
        android:id="@+id/thumbnail"
        android:layout_width="500dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dip"
        android:layout_marginTop="2dip"
        android:background="@drawable/gallery_default_icon"
        android:scaleType="centerCrop"
        android:src="@drawable/gallery_default_icon" />

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/thumbnail"
        android:background="@color/gallery_title_bg_color" >

        <TextView
            android:id="@+id/title"
            style="@style/slide_index_title"            
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:width="320dp" />

        <ImageView
            android:id="@+id/widget_slide_index_item_shadow"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:src="@color/transparent_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_above="@id/widget_slide_index_item_shadow"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
             android:layout_marginRight="10dip"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/commentsNum"
                style="@style/slide_index_comment"
                android:layout_marginRight="5dip"
                android:paddingBottom="5dip"
                android:text="0" />

            <ImageView
                style="@style/auto_size"
                android:layout_marginRight="5dip"
                android:paddingBottom="5dip"
                android:src="@drawable/gallery_comment_icon" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>