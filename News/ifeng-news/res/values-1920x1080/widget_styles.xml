<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- base widget -->
    <style name="auto_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- fill in horizontal and wrap in vertical -->
    <style name="fillh_auto_size">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fillv_auto_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- fill both size -->
    <style name="fill_both_size">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- widget -->
    <style name="arrow" parent="@style/auto_size">
        <item name="android:src">@drawable/nav_arrow</item>
    </style>

    <style name="horizontal_menu_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="focus_image" parent="@style/fillh_auto_size">
        <item name="android:layout_height">180dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="focus_image_description" parent="@style/fillh_auto_size">
        <item name="android:background">@drawable/slide_panel</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">13dip</item>
    </style>

    <style name="focus_content_image">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">73dip</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">3dip</item>
    </style>

    <style name="focus_content_description" parent="@style/auto_size">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="channel_list_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="channel_list_title_module">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="channel_list_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="channel_list_title" parent="@style/auto_size">
        <item name="android:textSize">17.5sp</item>
        <item name="android:textColor">#004276</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="links_title_module" parent="@style/auto_size">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="channel_list_description" parent="@style/auto_size">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/list_readed_text_color</item>
    </style>

    <style name="channel_list_arrow" parent="@style/auto_size">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:src">@drawable/list_item_arrow</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="slide_index_item" parent="@style/auto_size">
        <item name="android:minWidth">130dp</item>
        <item name="android:minHeight">157dip</item>
    </style>

    <style name="slide_index_shadow">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">144dip</item>
        <item name="android:layout_height">92dip</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/default_slide_index</item>
    </style>

    <style name="slide_index_title" parent="@style/auto_size">
        <item name="android:paddingTop">6dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center</item>
    </style>
	<style name="slide_index_comment" parent="@style/auto_size">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#727272</item>
    </style>
    <style name="slide_more_img" parent="@style/auto_size">
        <item name="android:src">@drawable/gallery_more</item>
    </style>

    <style name="slide_more_text" parent="@style/fillh_auto_size">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:text">@string/gallery_more_text</item>
        <item name="android:paddingTop">20dip</item>
    </style>
    <!-- widget slide -->
    <style name="slide_item_image" parent="@style/fill_both_size">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="slide_item_description" parent="@style/auto_size">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="head_focus_image_tag" parent="@style/auto_size">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#AAbb0b15</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="head_focus_image_title" parent="@style/auto_size">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#f5f5f5</item>
        <item name="android:background">#AA376682</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="channel_slide_item">
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <!-- add for plot topic, liuxiaoliang 20130829 begin -->
    <!--
          因textview有行间距 因此与其他布局的间距要比设计的大些，
                         故将数据减少1到2个dip  如设计为50dip 代码中为48dip
    -->
    <!-- 策划专题整体左右边距 如果此距离变更请将plot_topic_divider的距离也变更为一致距离 -->
    <style name="plot_topic" parent="@style/fillh_auto_size">
        <item name="android:paddingLeft">60px</item>
        <item name="android:paddingRight">60px</item>
    </style>

    <!-- 策划专题分割线 -->
    <style name="plot_topic_divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <!-- 策划专题导语样式 -->
    <style name="plot_summary_text" parent="@style/fillh_auto_size">
        <item name="android:textSize">38px</item>
        <item name="android:paddingTop">40px</item>
        <item name="android:lineSpacingExtra">12px</item>
        <item name="android:paddingBottom">54px</item>
        <item name="android:textColor">@color/plot_summary_color</item>
    </style>

    <!-- 策划专题题目样式 -->
    <style name="plot_topic_title_text" parent="@style/plot_topic">
        <item name="android:textSize">72px</item>
        <item name="android:lineSpacingExtra">8px</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 策划专题题目模块样式 -->
    <style name="plot_topic_title_module" parent="@style/fillh_auto_size">
        <item name="android:paddingTop">54px</item>
        <item name="android:paddingBottom">65px</item>
    </style>

    <!-- 策划专题期数样式 -->
    <style name="plot_topic_title_revision" parent="@style/plot_topic">
        <item name="android:textSize">38px</item>
        <item name="android:textColor">@color/list_readed_text_color</item>
    </style>

    <!-- 策划专题期数&评论数据专题title 和 下面布局的高度 -->
    <style name="plot_topic_title_revision_comment_module" parent="@style/fillh_auto_size">
        <item name="android:paddingTop">30px</item>
    </style>

    <!-- 策划专题大标题 -->
    <style name="plot_big_title_text" parent="@style/fillh_auto_size">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">62px</item>
        <item name="android:paddingTop">40px</item>
        <item name="android:paddingBottom">25px</item>
    </style>

    <!-- 策划专题文章标题模块 -->
    <style name="plot_doc_title_module" parent="@style/plot_topic">
        <item name="android:paddingTop">40px</item>
        <item name="android:paddingBottom">54px</item>
    </style>

    <!-- 策划专题文章标题 -->
    <style name="plot_doc_title_text" parent="@style/auto_size">
        <item name="android:textColor">@color/list_text_font</item>
        <item name="android:lineSpacingExtra">16px</item>
        <item name="android:textSize">50px</item>
    </style>

    <!-- 策划专题文章标题 -->
    <style name="plot_content_text" parent="@style/fillh_auto_size">
        <item name="android:textColor">@color/sport_title_color</item>
        <item name="android:textSize">50px</item>
        <item name="android:lineSpacingExtra">22px</item>
        <item name="android:paddingBottom">46px</item>
    </style>

    <!-- 策划专题图说模块 -->
    <style name="plot_diagram_module" parent="@style/fillh_auto_size">
        <item name="android:paddingTop">20px</item>
        <item name="android:paddingBottom">20px</item>
    </style>

    <!-- 策划专题图说图片 -->
    <style name="plot_diagram_image">
        <item name="android:layout_width">320px</item>
        <item name="android:layout_height">320px</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- 策划专题图说图片 & 文字 -->
    <style name="plot_diagram_content" parent="@style/plot_topic">
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingBottom">30px</item>
    </style>

    <!-- 策划专题图说文字 -->
    <style name="plot_diagram_text" parent="@style/auto_size">
        <item name="android:textColor">@color/plot_summary_color</item>
        <item name="android:textSize">38px</item>
        <item name="android:paddingLeft">26px</item>
    </style>

    <!-- 策划专题图集模块 -->
    <style name="plot_atlas_module" parent="@style/fillh_auto_size">
        <item name="android:paddingTop">20px</item>
        <item name="android:paddingBottom">20px</item>
    </style>

    <!-- 策划专题图集文字 -->
    <style name="plot_atlas_text" parent="@style/plot_topic">
        <item name="android:textColor">@color/plot_summary_color</item>
        <item name="android:textSize">38px</item>
        <item name="android:paddingTop">18px</item>
    </style>

    <!-- 策划专题图集内容 -->
    <style name="plot_atlas_content" parent="@style/fillh_auto_size">
        <item name="android:paddingTop">30px</item>
        <item name="android:paddingBottom">30px</item>
    </style>

    <!-- 策划专题结语模块 -->
    <style name="plot_epilogue_module" parent="@style/plot_topic">
        <item name="android:paddingTop">110px</item>
        <item name="android:paddingBottom">55px</item>
    </style>

    <!-- 策划专题结语文字 -->
    <style name="plot_epilogue_text" parent="@style/fillh_auto_size">
        <item name="android:textSize">38px</item>
        <item name="android:lineSpacingExtra">12px</item>
        <item name="android:textColor">@color/sport_title_color</item>
    </style>

    <!-- 策划专题结语文字模块 -->
    <style name="plot_epilogue_text_module" parent="@style/plot_topic">
        <item name="android:paddingTop">36px</item>
    </style>

    <!-- 策划专题<结语>文字 -->
    <style name="plot_epilogue_text_tag" parent="@style/auto_size">
        <item name="android:paddingTop">5px</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">@color/sport_title_color</item>
    </style>

    <!-- 策划专题结语文字 -->
    <style name="plot_epilogue_author" parent="@style/auto_size">
        <item name="android:textSize">28px</item>
        <item name="android:paddingTop">80px</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/plot_summary_color</item>
    </style>

    <!-- add for plot topic, liuxiaoliang 20130829 end -->


    <!-- 设置页离线，凤凰快讯，收藏内部图片 -->
    <style name="setting_top_container_text" parent="@style/auto_size">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/setting_title_color</item>
    </style>
    
    <style name="channel_menu_item_wrapper" parent="@style/fillv_auto_size">
        <item name="android:paddingLeft">7.5dp</item>
        <item name="android:paddingRight">7.5dp</item>
    </style>


    <!-- 频道列表顶部导航栏item文字适配 -->
    <style name="channel_menu_item" parent="@style/fillv_auto_size">
        <item name="android:textColor">@color/otherchannel</item>
        <item name="android:textSize">21sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 频道列表顶部导航栏item背景适配 -->
    <style name="channel_menu_item_background">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>