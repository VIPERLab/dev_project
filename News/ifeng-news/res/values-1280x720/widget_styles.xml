<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- base widget -->
    <style name="auto_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- fill in horizontal and wrap in vertical -->
    <style name="fillh_auto_size">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fillv_auto_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- fill both size -->
    <style name="fill_both_size">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- widget -->
    <style name="arrow" parent="@style/auto_size">
        <item name="android:src">@drawable/nav_arrow</item>
    </style>

    <style name="horizontal_menu_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="focus_image" parent="@style/fillh_auto_size">
        <item name="android:layout_height">180dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="focus_image_description" parent="@style/fillh_auto_size">
        <item name="android:background">@drawable/slide_panel</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingLeft">13dip</item>
    </style>

    <style name="focus_content_image">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">73dip</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">3dip</item>
    </style>

    <style name="focus_content_description" parent="@style/auto_size">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="channel_list_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="channel_list_title_module">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="channel_list_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="channel_list_title" parent="@style/auto_size">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#004276</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="links_title_module" parent="@style/auto_size">
        <item name="android:textSize">32px</item>
    </style>

    <style name="channel_list_description" parent="@style/auto_size">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">#ff727272</item>
    </style>
    <style name="slide_index_comment" parent="@style/auto_size">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#727272</item>
    </style>

    <style name="channel_list_arrow" parent="@style/auto_size">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:src">@drawable/list_item_arrow</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="slide_index_item" parent="@style/auto_size">
        <item name="android:minWidth">130dp</item>
        <item name="android:minHeight">157dip</item>
    </style>

    <style name="slide_index_shadow">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">144dip</item>
        <item name="android:layout_height">92dip</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/default_slide_index</item>
    </style>

    <style name="slide_index_title" parent="@style/auto_size">
        <item name="android:paddingTop">5dip</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="slide_more_img" parent="@style/auto_size">
        <item name="android:src">@drawable/gallery_more</item>
    </style>

    <style name="slide_more_text" parent="@style/fillh_auto_size">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:text">@string/gallery_more_text</item>
        <item name="android:paddingTop">20dip</item>
    </style>
    <!-- widget slide -->
    <style name="slide_item_image" parent="@style/fill_both_size">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="slide_item_description" parent="@style/auto_size">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="head_focus_image_tag" parent="@style/auto_size">
        <item name="android:textSize">27px</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#AAbb0b15</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">52px</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="head_focus_image_title" parent="@style/auto_size">
        <item name="android:textSize">34px</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#f5f5f5</item>
        <item name="android:background">#AA376682</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">68px</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="channel_slide_item">
        <item name="android:layout_width">207px</item>
        <item name="android:layout_height">142px</item>
    </style>

    <style name="topic_detail_text_module">
        <item name="android:textSize">15sp</item>
    </style>

     <style name="channel_menu_item_wrapper" parent="@style/fillv_auto_size">
         <item name="android:paddingLeft">7.5dp</item>
        <item name="android:paddingRight">7.5dp</item>
    </style>
    
    <!-- 频道列表顶部导航栏item文字适配 -->
    <style name="channel_menu_item" parent="@style/fillv_auto_size">
        <item name="android:textColor">@color/otherchannel</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 频道列表顶部导航栏item背景适配 -->
    <style name="channel_menu_item_background">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 调查单页提交模块按钮 -->
    <style name="survey_commit_but_module_style" parent="@style/fillh_auto_size">
        <item name="android:paddingBottom">28dp</item>
    </style>

    <!-- 调查单页查看结果按钮 -->
    <style name="survey_see_results_style" parent="@style/fillh_auto_size">
        <item name="android:paddingTop">20dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textColor">@color/survey_see_results_color</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!-- 调查单页查看结果按钮 -->
    <style name="survey_commit_but_style" parent="@style/fillh_auto_size">
        <item name="android:text">@string/survey_commit_but</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/survey_commit_but_bg</item>
    </style>

    <!-- 调查单结果页百分比 -->
    <style name="survey_percentage_but_style" parent="@style/fillh_auto_size">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/survey_introduction_color</item>
    </style>

    <!-- 调查单结果页问题项 -->
    <style name="survey_result_item_title_style" parent="@style/fillh_auto_size">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingRight">23dp</item>
        <item name="android:textColor">@color/survey_result_item_title_color</item>
    </style>

    <!-- 调查单结果页问题项 -->
    <style name="survey_result_item_pnum_style" parent="@style/auto_size">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:textColor">@color/survey_introduction_color</item>
    </style>

    <!-- 专题参与调查按钮 -->
    <style name="survey_topic_join_but_style" parent="@style/survey_commit_but_style">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- 调查单页头部 -->
    <style name="survey_head_style" parent="@style/fillh_auto_size">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:background">@color/list_default_font</item>
    </style>

    <!-- 调查单页头部标题 -->
    <style name="survey_head_title_style" parent="@style/auto_size">
        <item name="android:textSize">22sp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 调查单页头部时间 -->
    <style name="survey_head_time_style" parent="@style/auto_size">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/list_readed_text_color</item>
    </style>

    <!-- 调查单页头部简介 -->
    <style name="survey_head_introd_style" parent="@style/auto_size">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:textColor">@color/survey_introduction_color</item>
    </style>

    <!-- 调查单页问题模块 -->
    <style name="survey_item_module_style" parent="@style/fillh_auto_size">
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <!-- <item name="android:background">@drawable/survey_list_title_bg</item> -->
        <item name="android:textColor">@color/survey_introduction_color</item>
    </style>

    <!-- 调查单页选项模块 -->
    <style name="survey_item_style" parent="@style/fillh_auto_size">
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@drawable/survey_list_answer_normal_item_bg</item>
    </style>

    <!-- 调查单页选项切换器 -->
    <style name="survey_item_switcher_style" parent="@style/fillh_auto_size">
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- 调查单页问题选项 -->
    <style name="survey_item_answer_module_style" parent="@style/fillh_auto_size">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:gravity">top</item>
    </style>

    <!-- 调查单页选项文字 -->
    <style name="survey_item_answer_tv_style" parent="@style/fillh_auto_size">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:minLines">2</item>
        <item name="android:textColor">@color/survey_introduction_color</item>
    </style>

    <!-- 调查单页结果选项模块 -->
    <style name="survey_item_result_module_style" parent="@style/fillh_auto_size">
        <item name="android:paddingLeft">25dp</item>
    </style>

    <!-- 调查单页结果选项模块 -->
    <style name="survey_item_result_divider_style">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/survey_list_divider_color</item>
    </style>

    <style name="left_title_module" parent="@style/fillh_auto_size">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/title_color</item>
    </style>

    <style name="album_title" parent="@style/fillh_auto_size">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/list_text_font</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="topic_slider_style" parent="@style/auto_size">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="activeColor">@color/topic_slider_active_color</item>
        <item name="fadeOut">1000</item>
        <item name="inactiveColor">@color/topic_slider_inactive_color</item>
        <item name="inactiveType">fill</item>
        <item name="android:padding">20dip</item>
        <item name="radius">5dip</item>
    </style>

    <style name="left_title_module_top_divder" parent="@style/fillh_auto_size">
        <item name="android:paddingTop">15dp</item>
    </style>
    
    <style name="topic_slider_title" parent="@style/fillh_auto_size">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>