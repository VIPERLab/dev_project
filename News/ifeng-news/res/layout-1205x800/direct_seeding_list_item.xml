<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/channellist_selector"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/direct_seeding_time_TV"
        style="@style/auto_size"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:text="12:56"
        android:textColor="#0080e1"
        android:textSize="14.5sp" />

    <LinearLayout
        android:layout_marginTop="8dp"
        style="@style/fillh_auto_size"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="18dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/direct_seeding_title_TV"
            style="@style/auto_size"
            android:text="获救学生脊椎骨裂，怕父母担忧城没做过出事航班"
            android:textColor="#004276"
            android:textSize="16.5sp" 
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/direct_seeding_content_TV"
            style="@style/auto_size"
            android:text="获救学生脊椎骨裂，怕父母担忧城没做过出事航班,获救学生脊椎骨裂，怕父母担忧城没做过出事航班,获救学生脊椎骨裂，怕父母担忧城没做过出事航班,获救学生脊椎骨裂，怕父母担忧城没做过出事航班"
            android:textColor="#4d4d4d"
            android:textSize="16.5sp" />

          <RelativeLayout
            android:id="@+id/video_RL"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:layout_marginTop="5dp"
            android:background="@color/direct_seeding_default" >

            <ImageView
                style="@style/auto_size"
                android:layout_centerInParent="true"
                android:src="@drawable/direct_seeding_default_logo" />
            
            <ImageView
                android:id="@+id/direct_seeding_video_IV"
                style="@style/fill_both_size"
                android:scaleType="fitXY"/>

            <ImageView
                style="@style/auto_size"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_play" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/image_RL"
            style="@style/fillh_auto_size"
            android:layout_marginTop="5dp"
            android:background="@color/direct_seeding_default" >

            <ImageView
                style="@style/auto_size"
                android:layout_centerInParent="true"
                android:src="@drawable/direct_seeding_default_logo" />

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/direct_seeding_img"
                style="@style/fill_both_size" />

            <ImageView
                style="@style/auto_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/direct_seeding_zoom_logo" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/direct_seeding_share_LL"
            style="@style/auto_size"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:orientation="horizontal" >

            <ImageView
                style="@style/auto_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/direct_seeding_share_logo" />

            <TextView
                style="@style/auto_size"
                android:layout_marginLeft="3dp"
                android:text="分享"
                android:textColor="#868686"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            style="@style/fillh_auto_size"
            android:layout_marginTop="12dp"
            android:background="@drawable/direct_seeding_item_divider" />
    </LinearLayout>

</LinearLayout>