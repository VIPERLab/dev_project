<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
         >

        <com.ifeng.news2.widget.TopicFocusImageView
            android:id="@+id/module_focus_image"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:background="@drawable/channellist_selector"
            android:src="@drawable/default_topic_focus_image" />
		<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#66bbbbbb" />

        <TextView
            android:id="@+id/module_focus_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#66000000"
            android:gravity="center_vertical"
            android:paddingLeft="7dip"
            android:paddingRight="39dip"
            android:singleLine="true"
            android:text="罗马教皇访问古巴实现双赢"
            android:textColor="@color/white"
            android:textSize="27sp" />
    </LinearLayout>
